<%= content_tag(:table) do %>
  <% events.each do |event| %>
    <%= content_tag(:tr) do %>
      <%= content_tag(:td, event.recipient.name) %>
      <%= content_tag(:td, event.name) %>
      <%= content_tag(:td, display_date(event.date)) %>
      <%= content_tag(:td) do %>
        <%= link_to(
          t('events.index.presents', count: event.presents.count),
          event_presents_path(event)
        ) %>
      <% end %>
      <%= content_tag(:td) do %>
        <%= render(partial: 'events/edit_state', locals: { event: event }) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
