<%= content_tag(:h1, t('.title')) %>
<%= content_tag(:table) do %>
  <% @events.each do |event| %>
    <%= content_tag(:tr) do %>
      <%= content_tag(:td, event.name) %>
      <%= content_tag(:td, display_date(event.date)) %>
      <%= content_tag(:td, event.recipient.name) %>
      <%= content_tag(:td) do %>
        <%= link_to(
          presents_link_text(event),
          event_presents_path(event)
        )%>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= render(partial: 'form', locals: { event: @new_event }) %>
