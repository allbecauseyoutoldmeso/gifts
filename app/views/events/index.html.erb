<%= content_tag(:h1, t('.title')) %>
<%= content_tag(:div, data: { controller: 'show-hide' }) do %>
  <%= render(
    partial: 'events/actions',
    locals: {
      show_event_search_form: @show_event_search_form,
      show_new_event_form: @show_new_event_form
    }
  ) %>
  <%= render(
    partial: 'event_searches/new',
    locals: { event_search: @event_search, hidden: !@show_event_search_form}
  ) %>
  <%= render(
    partial: 'events/new',
    locals: { new_event: @new_event, hidden: !@show_new_event_form }
  ) %>
<%end %>
<%= render(partial: 'events/table', locals: { events: @events }) %>
