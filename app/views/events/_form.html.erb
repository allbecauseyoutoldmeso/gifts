<%= simple_form_for(
  event,
  html: {
    data: {
      action: 'submit->requests#submitForm'
    }
  }
) do |form| %>
  <%= form.input(:recipient_id, collection: current_user.recipients) %>
  <%= form.input(:name) %>
  <%= form.input(:date,as: :date, html5: true) %>
  <%= form.submit %>
<% end %>
