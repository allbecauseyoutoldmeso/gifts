<%= simple_form_for(
  event_presenter,
  html: {
    data: {
      action: 'submit->requests#submitForm',

    }
  }
) do |form| %>
  <%= render('event_presenters/recipient', form: form) %>
  <%= render('event_presenters/event_type', form: form) %>
  <%= form.input(:date, as: :date, html5: true) %>
  <%= form.input(:recurring, as: :boolean) %>
  <%= form.submit %>
<% end %>
