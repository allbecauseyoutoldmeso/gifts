<%= simple_form_for(
  [event, present],
  url: event_present_path(event, present),
  method: :delete,
  data: { action: 'click->requests#submitForm' }
) do |form| %>
  <%= form.button(
    :button,
    class: 'delete-button',
    aria: { label: t('helpers.submit.present.delete') }
  ) do %>
    <%= content_tag(:i, nil, class: 'far fa-times-circle') %>
  <% end %>
<% end %>
